---
import Page from "./Page.astro";

const meta = Astro.props;
---

<Page {...meta}>
  <article
    class="prose prose-headings:font-display prose-h1:my-8 prose-h1:text-5xl prose-h2:mt-16 prose-h2:text-4xl prose-h3:text-3xl prose-code:leading-4 prose-a:hover:bg-black/10"
  >
    {!meta.hideTitle && <h1>{meta.title}</h1>}
    <slot />
  </article>
</Page>
